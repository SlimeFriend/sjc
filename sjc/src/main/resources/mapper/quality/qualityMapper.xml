	<select id="selectQualityWaitInfo" resultType="MtlOdVO">
		SELECT mtl_od_code
               , mtl_od_quantity
               , mtl_od_date
               , dilivery_date
               , price
               , mt_code
               , cp_code
               , user_id
               , mtl_od_status
		FROM mtl_od
		WHERE mtl_od_status = '품질검사 대기'
	</select>
