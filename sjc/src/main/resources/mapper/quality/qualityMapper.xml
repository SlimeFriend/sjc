	<select id="selectQualityRegistrationInfo" resultType="InspectionVO">
		SELECT i.ins_code ins_code
		       , i.ins_status
		       , i.ins_sort
		       , i.ins_target
		       , i.ins_type_code
		       , o.mtl_od_code
		       , o.mtl_od_quantity
		       , o.mtl_od_date
		       , o.dilivery_date
		       , o.price
		       , o.mt_code
		       , o.cp_code
		       , m.mt_name
		FROM mtl_od o
		    JOIN inspection i
		        ON o.mtl_od_code = i.mtl_od_code
		    JOIN mt m
		        ON o.mt_code = m.mt_code
		 WHERE
		 	o.mtl_od_code = #{mtlOdCode}
	</select>
	


